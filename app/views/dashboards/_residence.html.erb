<div class="span12" style ="padding:20px;border-radius:5px;border:0px solid #000000;text-align:center">
 <h5>Residencial verification</h5>
<table class="table table-striped table-bordered table-condensed">
  <% @submitted_customers.each do |c| %>
 <tr><% if c.customer.submitted? %>
  <td><strong><%= c.customer.applicant_name %></strong>&nbsp;&nbsp;&nbsp;&nbsp;
      <strong><%= c.customer.application_ref_no %></strong>
     <% time1 = Time.now %> <% time2 = c.created_at %>
      <small style ="color:silver;padding-left:10px;padding-right:10px;margin-left:20px;">
          <%= distance_of_time_in_words(time1, time2) %> ago <br>
      </small>
     <p style ="color:silver;font-size:11px;">
        <%= c.customer.address %>
     </p>
  </td>
  
  <td>
    <% if c.customer.documents.present? %>
      <% c.customer.documents.each do |g| %>  
      <%= link_to image_tag('attachment.ico', size: "30x30"), g.document.url %>
      <% end %>
    <% end %>
   <!--  link_to image_tag('attachment.ico', size: "30x30"),
    .first.document.url, download: c.customer.documents.first.document_file_name  -->
  </td>
  <td>
  <%= link_to "Verify",new_servey_path(:customer_id=>c.customer.id, :tab_id=>current_user.tab.id), :class=>"label label-info" %></td>
    <% end %>
  <% end %></tr></table>
<%= render "co_applicant" %>
